---
import BaseLayout from "../layouts/BaseLayout.astro";
import PDFViewer from "../components/PDFViewer.astro";
---

<BaseLayout title="Resume" sideBarActiveItemID="resume">
  <div class="resume-wide flex flex-col">
    <PDFViewer />
    <a href="/resume.pdf" target="_blank" rel="noopener noreferrer" class="btn btn-outline my-4">Download</a>
  </div>
</BaseLayout>

<style>
  .resume-wide {
    width: min(94vw, calc((100dvh - 12rem) * 8.5 / 11), 1400px);
    margin-inline: auto;
  }

  @media (max-width: 1024px) {
    .resume-wide {
      width: 100%;
      margin-left: 0;
      margin-right: 0;
    }
  }
</style>
